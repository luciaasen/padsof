package icfs.teacher.main;

import java.awt.BorderLayout;
import java.awt.CardLayout;
import java.awt.Container;

import javax.swing.*;

import icfs.*;
import moon.Academy;

/**
 * @author lucia
 *
 */
public class MainTeacherPanel extends JPanel{
	private UpperPanel upper;
	private LowerPanel lower;
	
	public static void main(String[] args){
		JFrame window = new JFrame("TeacherView");
		window.setSize(Academy.DIMENSION);
	
		Container pane = window.getContentPane();
		SpringLayout layout = new SpringLayout();
		pane.setLayout(layout);
		pane.setBackground(Academy.ORANGE);
		pane.setPreferredSize(Academy.DIMENSION);
		UpperPanel upper = new UpperPanel();
		LowerPanel lower = new LowerPanel();
		JButton b = new JButton("Ok");
		b.setVisible(true);
		MainTeacherPanel p = new MainTeacherPanel();
		layout.putConstraint(SpringLayout.HORIZONTAL_CENTER, b, 0, SpringLayout.HORIZONTAL_CENTER, pane);
		layout.putConstraint(SpringLayout.VERTICAL_CENTER, b, 0, SpringLayout.VERTICAL_CENTER, pane);
		layout.putConstraint(SpringLayout.HORIZONTAL_CENTER, upper, 0, SpringLayout.HORIZONTAL_CENTER, pane);
		layout.putConstraint(SpringLayout.NORTH, upper, 0, SpringLayout.NORTH, pane);
		
		pane.add(upper);
		pane.add(b);
		window.setVisible(true);
		//pane.add(lower, BorderLayout.SOUTH);
		
		
	/*	JPanel superPanel = new JPanel();
		
		CardLayout superLayout = new CardLayout();
		superPanel.setLayout(superLayout);
		window.getContentPane().add(superPanel);
		superPanel.setVisible(true);
		
		superPanel.add(new MainTeacherPanel(), "main");
		superLayout.show(superPanel, "main");
	*/
	}
	public MainTeacherPanel(){
		//SpringLayout layout = new SpringLayout();
		BorderLayout layout = new BorderLayout();
		this.setLayout(layout);
		this.setPreferredSize(Academy.DIMENSION);
		this.setVisible(true);
		this.upper = new UpperPanel();
		this.lower = new LowerPanel();
		
		/*layout.putConstraint(SpringLayout.NORTH, upper, 0, SpringLayout.NORTH, this);
		layout.putConstraint(SpringLayout.NORTH, lower, 0, SpringLayout.SOUTH, upper);
		layout.putConstraint(SpringLayout.WEST, upper, 0, SpringLayout.WEST, this);
		layout.putConstraint(SpringLayout.WEST, lower, 0, SpringLayout.WEST, this);
		*/
		this.add(upper, BorderLayout.NORTH);
		this.add(lower, BorderLayout.SOUTH);
	}
}
