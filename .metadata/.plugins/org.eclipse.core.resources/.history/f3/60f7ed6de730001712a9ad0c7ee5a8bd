 */
package icfs;

import java.util.ArrayList;
import java.util.Arrays;

import javax.swing.JComboBox;
import javax.swing.JLabel;
import javax.swing.JPanel;

/**
 * @author lucia
 *
 */
public class DatePanel extends JPanel{
	
	public DatePanel(String s){
		super();		
		JLabel label = new JLabel(s);
		
		String[] month =   { "January", "February", "March", "April", "May", "June", "July", "August", "September",
	            			"October", "November", "December"       };
		JComboBox<String> monthC= new JComboBox<String>(month);
		
		int index = monthC.getSelectedIndex();
		ArrayList<Integer> days = new ArrayList();
		for(int i = 1; i <= 28; i++){
			days.add(i);
		}	
		
		if(index!=1){
			days.add(29);
			days.add(30);			
			if(!(index == 3 || index == 5 || index == 9 || index == 11)){
				days.add(31);
			}				
		}
		JComboBox<Integer> dayC = new JComboBox<Integer>(days.toArray(new int[days.size()]));
	}
}
