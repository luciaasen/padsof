package icfs.login;

import java.awt.*;
import java.awt.event.*;

import javax.swing.*;

/**
 * @author lusilu
 *
 */
public class LuciasTrial {
	public static void main(String []args){
		JFrame loginWindow = new JFrame("moon");
		Container cont = loginWindow.getContentPane();
		cont.setLayout(new BorderLayout());
		
		JLabel text = new JLabel("Your name");
		text.setVisible(true);
		cont.add(text, BorderLayout.CENTER);
		
		cont.setBackground(Color.getHSBColor(30, 20, 100));
		cont.setSize(400, 400);
		cont.setVisible(true);
		
		loginWindow.setVisible(true);
		loginWindow.setSize(400, 400);
	}
}
