package moon.mark;

import moon.course.question.*;

public class TfAnswer extends MQuestion{
	private Boolean answer;
	
	/**
	 * TfAnswer constructor
	 * @param question
	 * @param answer
	 */
	public TfAnswer(Question question, boolean answer){
		super(question);
		this.answer = answer;
	}
	
	@Override
	public Boolean isCorrect(){
		
		if (super.question instanceof TfQuestion){
			//TODO How to stop this warning? getCorrect will return Boolean if Question is of type TfQuestion! 
			if(this.answer.equals(super.question.getCorrect())){
				return true;
			}
		}
		return false;
	}
}
